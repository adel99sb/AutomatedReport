@namespace MauiApp1.Components

<nav class="navbar navbar-expand-lg navbar-light bg-light links-menu">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav d-flex align-items-center justify-content-around w-100">
            @foreach (var link in Links)
            {
                <li class="nav-item">
                    <a class="nav-link @(link.IsActive ? "active" : "")" href="@link.Url">@link.Name</a>
                </li>
            }
        </ul>
    </div>
</nav>

@code {
    [Parameter]
    public List<LinkItem> Links { get; set; } = new List<LinkItem>();
}
